<!-- ================= PROFESSIONAL CENTER FLASH ================= -->

<style>
  .flash-center {
    position: fixed;
    top: 18px;
    left: 50%;
    transform: translateX(-50%);
    z-index: 9999;
    width: min(720px, 92vw);
    pointer-events: none;
  }

  .flash-card {
    pointer-events: auto;
    border-radius: 16px;
    padding: 14px 16px;
    margin: 10px auto;
    display: flex;
    align-items: flex-start;
    gap: 12px;

    background: #fff;
    border: 1px solid rgba(0,0,0,.08);
    box-shadow: 0 12px 30px rgba(0,0,0,.12);

    /* Smooth animation */
    animation: flashIn .35s ease-out;
    overflow: hidden;
    position: relative;
  }

  .flash-card .flash-icon {
    width: 42px;
    height: 42px;
    border-radius: 12px;
    display: grid;
    place-items: center;
    font-size: 20px;
    flex: 0 0 auto;
  }

  .flash-card .flash-body {
    flex: 1;
    padding-top: 2px;
  }

  .flash-card .flash-title {
    font-weight: 800;
    font-size: 14px;
    margin: 0 0 2px;
    letter-spacing: .2px;
  }

  .flash-card .flash-msg {
    font-size: 14px;
    margin: 0;
    color: rgba(0,0,0,.74);
    line-height: 1.35;
  }

  .flash-card .btn-close {
    margin-left: 8px;
    margin-top: 4px;
    opacity: .55;
  }
  .flash-card .btn-close:hover { opacity: 1; }

  /* Top progress bar */
  .flash-timer {
    position: absolute;
    left: 0;
    top: 0;
    height: 3px;
    width: 100%;
    background: rgba(0,0,0,.06);
  }
  .flash-timer::after {
    content: "";
    display: block;
    height: 100%;
    width: 100%;
    animation: shrink var(--time, 4s) linear forwards;
    background: var(--bar, #198754);
  }

  /* Themes */
  .flash-success .flash-icon {
    background: rgba(25,135,84,.12);
    color: #198754;
  }
  .flash-success { --bar: #198754; }

  .flash-error .flash-icon {
    background: rgba(220,53,69,.12);
    color: #dc3545;
  }
  .flash-error { --bar: #dc3545; }

  @keyframes flashIn {
    from { opacity: 0; transform: translateY(-12px); }
    to { opacity: 1; transform: translateY(0); }
  }

  @keyframes shrink {
    from { width: 100%; }
    to { width: 0%; }
  }

  /* Better for very small screens */
  @media (max-width: 420px) {
    .flash-card {
      padding: 12px 12px;
      border-radius: 14px;
    }
    .flash-card .flash-icon {
      width: 38px;
      height: 38px;
      border-radius: 10px;
      font-size: 18px;
    }
  }
</style>

<div class="flash-center">
  <% if (success && success.length) { %>
    <% success.forEach(msg => { %>
      <div class="alert flash-card flash-success alert-dismissible fade show"
           role="alert" data-autohide="true" style="--time:4s;">
        <div class="flash-timer"></div>

        <div class="flash-icon">âœ“</div>
        <div class="flash-body">
          <p class="flash-title">Success</p>
          <p class="flash-msg"><%= msg %></p>
        </div>

        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    <% }); %>
  <% } %>

  <% if (error && error.length) { %>
    <% error.forEach(msg => { %>
      <div class="alert flash-card flash-error alert-dismissible fade show"
           role="alert" data-autohide="true" style="--time:5s;">
        <div class="flash-timer"></div>

        <div class="flash-icon">!</div>
        <div class="flash-body">
          <p class="flash-title">Error</p>
          <p class="flash-msg"><%= msg %></p>
        </div>

        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    <% }); %>
  <% } %>
</div>

<script>
  // Auto dismiss (Bootstrap alert close)
  document.querySelectorAll('.flash-card[data-autohide="true"]').forEach((el) => {
    const timeStr = getComputedStyle(el).getPropertyValue('--time').trim();
    const time = (parseFloat(timeStr) || 4) * 1000;

    setTimeout(() => {
      try {
        const alert = bootstrap.Alert.getOrCreateInstance(el);
        alert.close();
      } catch (e) {
        el.remove();
      }
    }, time);
  });
</script>
